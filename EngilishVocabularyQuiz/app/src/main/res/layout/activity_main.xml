<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaplanrenk">


    <ImageView
        android:id="@+id/circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/geri_don_btn"
        android:src="@drawable/circle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>


    <ImageView
        android:id="@+id/geri_don_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="72dp"
        android:textColor="@color/white"
        android:id="@+id/total_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/geri_don_btn"
        android:text="1/4"
        android:textSize="22sp" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/total_question"
        android:layout_marginTop="60dp"
        android:text="This will be the question"
        android:textSize="24sp"/>

    <Button
        android:background="@drawable/buton_arkaplan2"
        android:textColor="@color/black"
        android:id="@+id/ans_A"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/question"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:text="Ans A"/>

    <Button
        android:background="@drawable/buton_arkaplan2"
        android:id="@+id/ans_B"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_height="60dp"
        android:layout_below="@id/ans_A"
        android:layout_marginTop="6dp"
        android:text="Ans B"/>

    <Button
        android:background="@drawable/buton_arkaplan2"
        android:id="@+id/ans_C"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_height="60dp"
        android:layout_below="@id/ans_B"
        android:layout_marginTop="6dp"
        android:text="Ans C"/>

    <Button
        android:background="@drawable/buton_arkaplan2"
        android:id="@+id/ans_D"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_below="@id/ans_C"
        android:layout_marginTop="6dp"
        android:text="Ans D"/>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/ans_D"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/buton_arkaplan"
        android:text="Onayla"
        android:layout_marginTop="22dp"
        android:textColor="@color/white" />

</RelativeLayout>
